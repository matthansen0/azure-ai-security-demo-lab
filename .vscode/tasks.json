{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy sample + secure (devcontainer)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "./deploy-sample-and-secure.sh --use-devcontainer true --env demo --location eastus"
      ],
      "problemMatcher": []
    },
    {
      "label": "Deploy sample + secure (host)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "./deploy-sample-and-secure.sh --use-devcontainer false --env demo --location eastus"
      ],
      "problemMatcher": []
    },
    {
      "label": "Secure existing RG",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "read -p 'Resource group: ' RG; ./azureAISecurityDeploy.sh \"$RG\""
      ],
      "problemMatcher": []
    },
    {
      "label": "Cleanup RG",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "read -p 'Resource group: ' RG; ./cleanup.sh \"$RG\""
      ],
      "problemMatcher": []
    }
  ]
}
